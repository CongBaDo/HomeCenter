<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/img_tool_mic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/ic_micro" />

    <com.HomeCenter2.ui.ScheduleImageView
        android:id="@+id/img_tool_on"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_margin="8dp"
        android:src="@drawable/btn_on_icon" />

    <com.HomeCenter2.ui.ScheduleImageView
        android:id="@+id/img_tool_off"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_margin="8dp"
        android:src="@drawable/btn_off_icon" />

</LinearLayout>