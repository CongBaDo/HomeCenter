<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/img_tool_mic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="4dp"
        android:background="@drawable/ic_micro" />

    <com.HomeCenter2.ui.ScheduleImageView
        android:id="@+id/img_tool_on"
        android:layout_gravity="center_vertical"
        android:layout_width="@dimen/tool_column_width"
        android:layout_height="@dimen/tool_column_width"
        android:layout_margin="4dp"
        android:src="@drawable/btn_on_icon" />

    <com.HomeCenter2.ui.ScheduleImageView
        android:id="@+id/img_tool_off"
        android:layout_gravity="center_vertical"
        android:layout_width="@dimen/tool_column_width"
        android:layout_height="@dimen/tool_column_width"
        android:layout_margin="4dp"
        android:src="@drawable/btn_off_icon" />

</LinearLayout>