<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow_light"
    android:orientation="vertical" xmlns:app="http://schemas.android.com/apk/res/com.HomeCenter2">

    <TextView
        android:id="@+id/title_room"
        style="@android:style/TextAppearance.DeviceDefault.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow_header"
        android:gravity="center"
        android:padding="8dp"
        android:text="Test"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <!--
             <FrameLayout
            android:id="@+id/frame_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/boder_tool_room" >
        -->

        <LinearLayout
            android:id="@+id/contain_tool_left"
            android:layout_width="@dimen/tool_width"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/boder_tool_room"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img_expand_close_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@drawable/icon_arrow_next"
                android:padding="4dp" />

            <com.etsy.android.grid.StaggeredGridView
                android:id="@+id/grid_tool_left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnWidth="@dimen/tool_column_width"
                app:column_count="2"
                android:stretchMode="columnWidth" >
            </com.etsy.android.grid.StaggeredGridView>
        </LinearLayout>
        <!-- </FrameLayout> -->


        <!--
             <FrameLayout
            android:id="@+id/frame_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/boder_tool_room" >
        -->

        <LinearLayout
            android:id="@+id/contain_tool_right"
            android:layout_width="@dimen/tool_width"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/boder_tool_room"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img_expand_close_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_arrow_back"
                android:padding="4dp" />

            <com.etsy.android.grid.StaggeredGridView
                android:id="@+id/grid_tool_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnWidth="@dimen/tool_column_width"
                app:column_count="2"
                android:stretchMode="columnWidth" >
            </com.etsy.android.grid.StaggeredGridView>
        </LinearLayout>
        <!-- </FrameLayout> -->
    </RelativeLayout>

</LinearLayout>