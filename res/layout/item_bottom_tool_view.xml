<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/tool_column_height_double"
    android:gravity="center"
    android:padding="4dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <com.HomeCenter2.customview.ToolImageView
            android:id="@+id/img_tool_top"
            android:layout_width="@dimen/tool_column_width"
            android:layout_height="@dimen/tool_column_width"
            android:layout_gravity="center" />

        <com.HomeCenter2.customview.ToolImageView
            android:id="@+id/img_tool_bottom"
            android:layout_width="@dimen/tool_column_width"
            android:layout_height="@dimen/tool_column_width"
            android:layout_gravity="center" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <com.HomeCenter2.ui.ScheduleImageView
        android:id="@+id/img_tool_on"
        android:layout_width="@dimen/tool_column_width"
        android:layout_height="@dimen/tool_column_width"
        android:layout_centerVertical="true"
        android:src="@drawable/btn_on_icon" />

</RelativeLayout>