<?xml version="1.0" encoding="utf-8"?>
<com.HomeCenter2.customview.CategoryView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rltDeviceItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/boder_item_room_config"
    android:padding="1dp" >

    <ImageView
        android:id="@+id/imgIcon"
        android:layout_width="@dimen/main_item_icon_height"
        android:layout_height="@dimen/main_item_icon_height"
        android:layout_centerInParent="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/key_doorlock_on" />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgIcon"
        android:layout_centerInParent="true"
        android:ellipsize="marquee"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="device"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/black">
    </TextView>

</com.HomeCenter2.customview.CategoryView>