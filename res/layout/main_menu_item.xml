<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/main_menu_item_height"
    android:layout_height="@dimen/main_menu_item_height"
    android:orientation="horizontal" >
    
    <ImageView
        android:id="@+id/imgIconMenu"
        android:layout_width="@dimen/main_menu_item_icon_height"
        android:layout_height="@dimen/main_menu_item_icon_height"
        android:src="@drawable/ic_launcher"
        android:layout_margin="@dimen/main_menu_item_icon_margin"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/txtTitleMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:layout_weight="1"
        android:textColor="@color/white"/>
</LinearLayout>
