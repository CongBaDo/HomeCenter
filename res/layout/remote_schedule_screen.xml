<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrv_detail_device"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
        
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_group_layout"
                android:background="@drawable/restangle_btn_grey"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_group_layout">

                    <TextView
                        android:id="@+id/tvS01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:text="@string/schedule01"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/tvDayS01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/editDayS01"
                        android:layout_alignLeft="@+id/tvS01"
                        android:layout_marginLeft="@dimen/day_margin"
                        android:text="@string/day"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <TextView
                        android:id="@+id/tvTimeS01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/editTimeS01"
                        android:layout_alignBottom="@+id/editTimeS01"
                        android:layout_alignLeft="@+id/tvDayS01"
                        android:text="@string/time"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <EditText
                        android:id="@+id/editDayS01"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvS01"
                        android:layout_toRightOf="@id/tvTimeS01"
                        android:ems="10"
                        android:focusableInTouchMode="false" />

                    <EditText
                        android:id="@+id/editTimeS01"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/editDayS01"
                        android:layout_toRightOf="@id/tvTimeS01"
                        android:ems="10"
                        android:focusableInTouchMode="false" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_group_layout"
                     >

                    <TextView
                        android:id="@+id/tvS02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:text="@string/schedule02"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/tvDayS02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/editDayS02"
                        android:layout_alignLeft="@+id/tvS02"
                        android:layout_marginLeft="@dimen/day_margin"
                        android:text="@string/day"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <TextView
                        android:id="@+id/tvTimeS02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/editTimeS02"
                        android:layout_alignBottom="@+id/editTimeS02"
                        android:layout_alignLeft="@+id/tvDayS02"
                        android:text="@string/time"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <EditText
                        android:id="@+id/editDayS02"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvS02"
                        android:layout_toRightOf="@id/tvTimeS02"
                        android:ems="10"
                        android:focusableInTouchMode="false" />

                    <EditText
                        android:id="@+id/editTimeS02"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/editDayS02"
                        android:layout_toRightOf="@id/tvTimeS02"
                        android:ems="10"
                        android:focusableInTouchMode="false" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_group_layout"
                     >

                    <TextView
                        android:id="@+id/tvS03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:text="@string/schedule03"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/tvDayS03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/editDayS03"
                        android:layout_alignLeft="@+id/tvS03"
                        android:layout_marginLeft="@dimen/day_margin"
                        android:text="@string/day"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <TextView
                        android:id="@+id/tvTimeS03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/editTimeS03"
                        android:layout_alignBottom="@+id/editTimeS03"
                        android:layout_alignLeft="@+id/tvDayS03"
                        android:text="@string/time"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <EditText
                        android:id="@+id/editDayS03"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvS03"
                        android:layout_toRightOf="@id/tvTimeS03"
                        android:ems="10"
                        android:focusableInTouchMode="false" />

                    <EditText
                        android:id="@+id/editTimeS03"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/editDayS03"
                        android:layout_toRightOf="@id/tvTimeS03"
                        android:ems="10"
                        android:focusableInTouchMode="false" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_group_layout"
                    >

                    <TextView
                        android:id="@+id/tvS04"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:text="@string/schedule04"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/tvDayS04"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/editDayS04"
                        android:layout_alignLeft="@+id/tvS04"
                        android:layout_marginLeft="@dimen/day_margin"
                        android:text="@string/day"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <TextView
                        android:id="@+id/tvTimeS04"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/editTimeS04"
                        android:layout_alignBottom="@+id/editTimeS04"
                        android:layout_alignLeft="@+id/tvDayS04"
                        android:text="@string/time"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <EditText
                        android:id="@+id/editDayS04"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvS04"
                        android:layout_toRightOf="@id/tvTimeS04"
                        android:ems="10"
                        android:focusableInTouchMode="false" />

                    <EditText
                        android:id="@+id/editTimeS04"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/editDayS04"
                        android:layout_toRightOf="@id/tvTimeS04"
                        android:ems="10"
                        android:focusableInTouchMode="false" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_group_layout"
                android:background="@drawable/restangle_btn_grey"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btnTurnOnOffWhen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/turned_on_when" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <CheckBox
                            android:id="@+id/cbTemp1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CheckBox" />

                        <CheckBox
                            android:id="@+id/cbLight1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CheckBox" />

                        <CheckBox
                            android:id="@+id/cbSmoke1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CheckBox" />

                        <CheckBox
                            android:id="@+id/cbMotion1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CheckBox" />

                        <CheckBox
                            android:id="@+id/cbMotion3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CheckBox" />

                        <CheckBox
                            android:id="@+id/cbDoor1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CheckBox" />

                        <CheckBox
                            android:id="@+id/cbDoor3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CheckBox" />

                        <CheckBox
                            android:id="@+id/cbSmartEnergy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/smart_energy" >
                        </CheckBox>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <CheckBox
                            android:id="@+id/cbTemp2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CheckBox" />

                        <CheckBox
                            android:id="@+id/cbLight2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CheckBox" />

                        <CheckBox
                            android:id="@+id/cbSmoke2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CheckBox" />

                        <CheckBox
                            android:id="@+id/cbMotion2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CheckBox" />

                        <CheckBox
                            android:id="@+id/cbMotion4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CheckBox" />

                        <CheckBox
                            android:id="@+id/cbDoor2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CheckBox" />

                        <CheckBox
                            android:id="@+id/cbDoor4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CheckBox" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>