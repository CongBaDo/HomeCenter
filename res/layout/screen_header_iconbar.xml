<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="@dimen/header_menu_height"
	android:background="@color/bg_header" android:orientation="horizontal">
	<LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent"
		android:gravity="center_vertical"
	    android:id="@+id/menu_button_container"
	    >
   		<ImageView android:id="@+id/img_home" android:layout_width="@dimen/ic_voice_width"
			android:src="@drawable/btn_navigation_previous" android:layout_height="wrap_content"
			android:layout_marginLeft="@dimen/previous_margin_left"></ImageView>
  	</LinearLayout>
	<LinearLayout android:id="@+id/iconbar"
		android:layout_width="match_parent" android:layout_height="match_parent"
		android:layout_marginLeft="@dimen/distance_views"
		android:layout_weight="1">
	</LinearLayout>
</LinearLayout>